<div class="container">
    <div class="row ">
        <div class="col-md-6 offset-md-3">
            <div class="jumbotron">
                @if (ViewBag.Message != null)
                {
                    <span class="text-danger">@ViewBag.Message</span>
                }
                <form method="post" action="/account/login">
                    <h2>Login</h2>
                    <input class="form-control mt-3" type="text" placeholder="email" name="email" />
                    <input class="form-control mt-3" type="password" placeholder="password" name="password" />
                    <button class="btn btn-primary mt-3">Login</button>
                </form>
                <a href="/account/signup">Dont' have an account? Sign up here</a>

            </div>
        </div>

    </div>

</div>