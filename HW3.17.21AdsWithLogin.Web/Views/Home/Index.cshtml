@using HW3._17._21AdsWithLogin.Data
@model IndexViewModel


<div class="container">
    <main role="main" class="pb-3">

        <div class="row">
            <div class="col-md-6 offset-md-3">

                @foreach (Ad ad in Model.Ads)
                {
                    <div class="jumbotron">
                        <h5>Listed by @ad.PostedBy</h5>
                        <h5>Listed on @ad.DateCreated.ToShortDateString()</h5>
                        <h5>Phone Number: @ad.PhoneNumber </h5>
                        <h3>Details:</h3>
                        <p>@ad.Description</p>
                        @if (Model.AdIds.Contains(ad.Id))
                        {
                            <form method="post" action="home/deleteposting">
                                <input type="hidden" name="id" value="@ad.Id" />
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        }
                    </div>
                }

            </div>
        </div>
    </main>
</div>