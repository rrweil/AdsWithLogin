@model NewAdViewModel;

<div class="container">
    <div class="row ">
        <div class="col-md-6 offset-md-3">
           
            <div class="jumbotron">
                <form method="post" action="/home/newad">
                    <h3>New Ad</h3>
                    <input type ="hidden" name="email" value="@Model.CurrentUserEmail"/>
                    <input class="form-control mt-3" type="text" placeholder="phone number" name="phonenumber" />
                    <textarea class="form-control mt-3" name="description" rows="5" placeholder="description"></textarea>
                    <button class="btn btn-primary mt-3">Submit</button>
                </form>
            </div>
        </div>

    </div>

</div>